{% extends 'base.html.twig' %}

{% block title %}Garlic Blog{% endblock %}

{% block stylesheets %}
    
    {% stylesheets 
        '@bootstrap_css' 
        '@GarlicBlogAppBundle/Resources/public/css/main.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" media="screen" />
    {% endstylesheets %}
    
    {% block extraStylesheets %}{% endblock %}
{% endblock %}

{% block body %}
    <nav class="navbar navbar-default">
      <div class="container">
        <div class="row-fluid">
            <div class="col-md-3">
                <div class="navbar-header">
                  <a class="navbar-brand" href="/">
                    <img alt="Brand" src="">
                  </a>
                </div>
            </div>
            
            <div class="col-md-7">
                <form class="navbar-form navbar-left" role="search" style="width:100%">
                  <div class="form-group" style="width:70%">
                    <input type="text" class="form-control" style="width:100%" placeholder="Search">
                  </div>
                  <button type="submit" class="btn btn-default" style="margin-left:5px">Submit</button>
                </form>
            </div>
    
            <div class="col-md-2">
                    {% if userName is defined %}
                        <ul class="nav navbar-nav navbar-right">
                            <li class="dropdown">
                              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{ userName }} <span class="caret"></span></a>
                              <ul class="dropdown-menu">
                                <li><a href="/myProfile">Profile</a></li>
                                <li><a href="/myArticles">Articles</a></li>
                                <li><a href="#">Favorite</a></li>
                                <li role="separator" class="divider"></li>
                                <li><a href="/logout">Logout</a></li>
                              </ul>
                            </li>
                        </ul>
                    {% else %}
                        <div style="margin-top:8px">
                            <a href="/login" class="btn btn-primary">Sign In</a>
                            <a href="/register" class="btn btn-default">Sign Up</a>
                        </div>
                    {% endif %}
                
            </div>
            
        </div>
      </div>
    </nav>
    
    <div class="container" id="content_container">
        {% block content %}{% endblock %}
    </div>

{% endblock %}

{% block javascripts %}
    
    {% javascripts
        '@jquery'
        '@bootstrap_js'
        '@GarlicBlogAppBundle/Resources/public/js/main_functions.js'
        '@GarlicBlogAppBundle/Resources/public/js/main_handler.js' combine=true %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    
{% endblock %}