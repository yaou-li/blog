{% extends 'base.html.twig' %}

{% block title %}Garlic Blog{% endblock %}

{% block stylesheets %}
    
    {% stylesheets 
        '@GarlicBlogAppBundle/Resources/public/css/bootstrap.min.css' 
        '@GarlicBlogAppBundle/Resources/public/css/main.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    
{% endblock %}

{% block body %}
    <nav class="navbar navbar-default">
      <div class="container">
        <div class="row-fluid">
            <div class="col-md-3">
                <div class="navbar-header">
                  <a class="navbar-brand" href="#">
                    <img alt="Brand" src="">
                  </a>
                </div>
            </div>
            
            <div class="col-md-7">
                <form class="navbar-form navbar-left" role="search" style="width:100%">
                  <div class="form-group" style="width:70%">
                    <input type="text" class="form-control" style="width:100%" placeholder="Search">
                  </div>
                  <button type="submit" class="btn btn-default" style="margin-left:5px">Submit</button>
                </form>
            </div>
            
            <div class="col-md-2">
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                      <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Dropdown <span class="caret"></span></a>
                      <ul class="dropdown-menu">
                        <li><a href="#">Profile</a></li>
                        <li><a href="#">Articles</a></li>
                        <li><a href="#">Favorite</a></li>
                        <li role="separator" class="divider"></li>
                        <li><a href="#">Logout</a></li>
                      </ul>
                    </li>
                </ul>
            </div>
            
        </div>
      </div>
    </nav>
    
    <div class="container" id="content_container">
        {% block content %}{% endblock %}
    </div>

{% endblock %}

{% block javascripts %}
    
    {% javascripts
        '@GarlicBlogAppBundle/Resources/public/js/jquery-3.1.0.min.js'
        '@GarlicBlogAppBundle/Resources/public/js/bootstrap.min.js' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    
{% endblock %}