{% extends 'GarlicBlogAppBundle::layout.html.twig' %}

{% block content %}
    <div class="row-fluid">
        <div class="col-md-8 col-md-offset-2" id="article_content">
            <ul class="list-group">
                <li class="list-group-item">
                    <input type="text" class="form-control" placeholder="Article Title">
                    <div class="content-divider"></div>
                    <textarea type="textarea" class="form-control" rows="20"></textarea>
                    <div class="content-divider"></div>
                    <div class="article-footer"></div>
                    <div class="content-divider"></div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-2">
                                <label for="category_select" class="pull-right">Categories:</label>
                            </div>
                            <div class="col-md-10">
                                <select class="form-control" id="category_select">
                                    <option>Category1</option>
                                    <option>Category2</option>
                                    <option>Category3</option>
                                    <option>Category4</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="content-divider"></div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-2">
                                <label for="privacy_select" class="pull-right">Privacy:</label>
                            </div>
                            <div class="col-md-10">
                                <select class="form-control" id="privacy_select">
                                    <option>Public</option>
                                    <option>For all your friends</option>
                                    <option>Only for yourself</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="content-divider"></div>
                    <div class="row">
                        <div class='col-md-10 col-md-offset-2'>
                            <button type="submit" class="btn btn-primary pull-right">Post now</button>
                        </div>
                    </div>
                    
                </li>
            </ul>
        </div>
        
        
    </div>
{% endblock %}