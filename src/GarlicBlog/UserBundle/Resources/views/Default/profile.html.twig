{% extends 'GarlicBlogAppBundle::layout.html.twig' %}

{% block extraStylesheets %}
    
    {% stylesheets 
        '@GarlicBlogUserBundle/Resources/public/css/profile.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <ul class="list-group">
                <li class="list-group-item">
                    <h4 class="list-group-item-heading">Profile</h4>
                    <div class="content-divider"></div>
                    <form action="/updateProfile" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="formGroupExampleInput2">Avatar:</label>
                            <div class='row-fluid'>
                                    <img src="{{ asset('avatars/' ~ avatar) }}" alt="Avatar" style="height:80px; width:80px"/>
                                <input type="file" name="avatar" id="profile_avatar">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="formGroupExampleInput2">Username:</label>
                            <div class="row">
                                <div class="col-md-8">
                                    <input type="text" class="form-control" id="formGroupExampleInput2" value={{ userName }} readonly>
                                </div>
                            </div>
                            
                        </div>
                        <div class="form-group">
                            <label for="nickname">Penname:</label>
                            <div class="row">
                                <div class="col-md-8">
                                    {% if nickName is defined %}
                                        <input type="text" class="form-control" name="nickname" value="{{ nickName }}" placeholder="Another input">
                                    {% else %}
                                        <input type="text" class="form-control" name="nickname" placeholder="Another input">
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="email">Email:</label>
                            <div class="row">
                                <div class="col-md-8">
                                    {% if email is defined %}
                                        <input type="text" class="form-control" name="email" value="{{ email }}" placeholder="Another input">
                                    {% else %}
                                        <input type="text" class="form-control" name="email" placeholder="Another input">
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="password">Password:</label>
                            <div class="row">
                                <div class="col-md-8">
                                    <input type="password" class="form-control" name="password" placeholder="Another input">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="confirm_password">Confirm Password:</label>
                            <div class="row">
                                <div class="col-md-8">
                                    <input type="password" class="form-control" name="confirm_password" placeholder="Another input">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="background_color">Background:</label>
                            <div class="row">
                                <div class="col-md-8">
                                    <input class="form-control" type="color" name="background_color" value={{ background }}>
                                </div>
                            </div>
                        </div>
                        
                        {# button for upload file
                        <div class="form-group">
                            <label for="formGroupExampleInput2">Background:</label>
                            <div class='row-fluid'>
                            <label class="custom-file">
                              <input type="file" id="file" class="custom-file-input">
                              <span class="custom-file-control"></span>
                            </label>
                            </div>
                        </div> 
                        #}
                        
                        <div class="content-divider"></div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-12">
                                    <button type="submit" class="btn btn-primary pull-right">Update</button>
                                </div>
                            </div>
                            
                        </div>
                    </form>
                    
                    
                </li>
            </ul>
        </div>
        
    </div>
{% endblock %}